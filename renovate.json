{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchFileNames": ["go.mod"],
      "matchDepTypes": ["indirect"],
      "groupName": "gomod",
      "extends": ["schedule:weekly"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchFileNames": ["tools/go.mod"],
      "matchDepTypes": ["indirect"],
      "groupName": "tools gomod",
      "extends": ["schedule:monthly"],
      "enabled": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
